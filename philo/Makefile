################################################################################
## ARGUMENTS / VARIABLES

NAME		= philo
CC		= cc
CFLAGS		= -Wall -Werror -Wextra

################################################################################
## SOURCES

SRCS		= 	main.c\

OBJS		= $(SRCS:.c=.o)

################################################################################
## REGLES

all: $(NAME)

$(NAME): $(OBJS)
	$(CC) $(CFLAGS) $(OBJS) -o $(NAME)

%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	rm -f *.o 

fclean: clean
	rm -f $(NAME)

re: fclean all

.PHONY: all clean fclean re
